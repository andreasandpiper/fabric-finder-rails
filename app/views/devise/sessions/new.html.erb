<div class="column is-one-fifth is-offset-two-fifths">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :login %><br />
      <%= f.text_field :login, class: "input", autofocus: true, placeholder: "username or email", autocomplete: "username or email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password,  class: "input", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in",  class: "button is-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>